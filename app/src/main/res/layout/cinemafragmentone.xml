<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="19dp"
                    android:id="@+id/tv_dw"
                    android:src="@mipmap/icon_location"
                    android:layout_marginTop="50dp"
                    />
                <TextView
                    android:layout_width="192dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="666"
                    android:id="@+id/movie_site"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginTop="50dp"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginLeft="19dp"
                    android:src="@mipmap/dianhua"
                    android:layout_below="@id/tv_dw"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_width="192dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:text="666"
                    android:id="@+id/movie_phone"
                    android:layout_below="@id/movie_site"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_width="192dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="19dp"
                    android:text="乘车路线"
                    android:layout_below="@id/movie_phone"
                    android:textColor="#fff"
                    android:id="@+id/movie_path"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    />


                <TextView
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:text="666"
                    android:layout_below="@id/movie_path"
                    android:textColor="#fff"
                    android:id="@+id/movie_path1"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

        </ScrollView>
</RelativeLayout>
