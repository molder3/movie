<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >
   <!-- <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/comin_img"
        />-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/comin_img"
        fresco:roundedCornerRadius="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#1C2243"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/comin_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:id="@+id/comin_time"
            android:textColor="#fff"
            android:layout_below="@id/comin_name"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:id="@+id/comin_like"
            android:textColor="#fff"
            android:layout_below="@id/comin_time"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/comin_like"
            android:layout_alignParentRight="true"
            android:text="预约"
            android:textColor="#fff"
            android:visibility="visible"
            android:background="@drawable/butridios"
            android:id="@+id/comin_but"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/comin_like"
            android:layout_alignParentRight="true"
            android:text="已预约"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@drawable/butridios1"
            android:id="@+id/comin_but1"
            />
    </RelativeLayout>
</LinearLayout>
