<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:background="#1C2243"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/nearby_img"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            fresco:roundedCornerRadius="10dp"
            ></com.facebook.drawee.view.SimpleDraweeView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textSize="24dp"
                android:textColor="#fff"
                android:id="@+id/nearby_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:id="@+id/nearby_time"
                android:textColor="#fff"
                android:layout_below="@id/nearby_name"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#fff"
                android:id="@+id/nearby_lc"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                />
            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="111"
                 android:textSize="18dp"
                 android:layout_marginTop="15dp"
                 android:id="@+id/reco_like"
                 android:textColor="#fff"
                 android:layout_below="@id/reco_time"
                 android:layout_marginLeft="20dp"
                 />-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
