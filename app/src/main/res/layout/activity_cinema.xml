            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_if"
            android:layout_alignBottom="@id/text_if"
            android:layout_marginLeft="100dp"
            android:button="@null"
            android:background="@mipmap/hongxin"
            android:id="@+id/hong"/>

